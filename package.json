{
  "name": "streamflow-api",
  "version": "1.0.0",
  "description": "API de StreamFlow ",
  "main": "app.js",
 "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "npm install && npm run generate:all",
    "generate:all": "npm run generate:auth && npm run generate:usuarios",
    "generate:auth": "npx prisma generate --schema=prisma/auth/schema.prisma",
    "generate:usuarios": "npx prisma generate --schema=prisma/usuarios/schema.prisma",
    "postinstall": "prisma generate",
    "build:render": "npm install && npx prisma generate --schema=prisma/auth/schema.prisma && npx prisma generate --schema=prisma/usuarios/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "nodemon": "^3.0.3",
    "prisma": "^6.6.0"
  }
}